<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SettingsController"
            style="-fx-background-color: linear-gradient(to bottom, #0D47A1, #1976D2); -fx-padding: 20;">
    
    <!-- Tiêu đề Cài Đặt -->
    <top>
        <Label text="Cài Đặt" fx:id="settingsTitle" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10;" alignment="CENTER"/>
    </top>

    <!-- Nội dung chính -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-padding: 20; -fx-background-radius: 10;">
            <!-- Tùy chọn Chế độ Tối -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5 0;">
                <CheckBox fx:id="darkModeCheckBox" text="Chế độ Tối" style="-fx-font-size: 16px; -fx-text-fill: #1A237E;"/>
            </HBox>
            
            <!-- Tùy chọn Thông báo -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5 0;">
                <CheckBox fx:id="notificationsCheckBox" text="Bật thông báo" style="-fx-font-size: 16px; -fx-text-fill: #1A237E;"/>
            </HBox>
            
            <!-- Thay đổi mật khẩu -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5 0;">
                <Label text="Thay đổi mật khẩu:" style="-fx-font-size: 16px; -fx-text-fill: #1A237E;"/>
                <Button text="Đổi mật khẩu" fx:id="changePasswordButton" style="-fx-background-color: #4FC3F7; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0.5, 0, 2);"/>
            </HBox>
            
            <!-- Nút Quay lại -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                <Button text="Quay lại" fx:id="backButton" style="-fx-background-color: #FF7043; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0.5, 0, 2);"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
