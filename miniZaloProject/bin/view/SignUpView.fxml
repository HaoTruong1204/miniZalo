<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SignUpController" 
      style="-fx-background-color: linear-gradient(to bottom, #0D47A1, #1976D2, #64B5F6); -fx-padding: 40;">
    
    <!-- Nút Quay lại -->
    <HBox alignment="TOP_LEFT">
        <Button fx:id="backButton" text="Quay lại" style="-fx-background-color: #B0BEC5; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 12px; -fx-padding: 5 15;" />
    </HBox>
    
    <!-- Tiêu đề Đăng ký -->
    <VBox spacing="5" alignment="CENTER">
        <Label text="Tạo Tài Khoản" style="-fx-text-fill: #FFFFFF; -fx-font-size: 28px; -fx-font-weight: bold;" />
        <Label text="Đăng ký để tham gia miniZalo" style="-fx-text-fill: #BBDEFB; -fx-font-size: 14px;" />
    </VBox>
    
    <!-- Form đăng ký -->
    <VBox spacing="15" alignment="CENTER" maxWidth="320">
        <TextField fx:id="usernameField" promptText="Tên người dùng" 
                   style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 12; -fx-border-color: #B3E5FC; -fx-border-width: 1; -fx-font-size: 14px;" />
        <TextField fx:id="emailField" promptText="Email" 
                   style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 12; -fx-border-color: #B3E5FC; -fx-border-width: 1; -fx-font-size: 14px;" />
        <PasswordField fx:id="passwordField" promptText="Mật khẩu" 
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 12; -fx-border-color: #B3E5FC; -fx-border-width: 1; -fx-font-size: 14px;" />
        <PasswordField fx:id="confirmPasswordField" promptText="Xác nhận mật khẩu" 
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 12; -fx-border-color: #B3E5FC; -fx-border-width: 1; -fx-font-size: 14px;" />
    </VBox>
    
    <!-- Nút Đăng ký -->
    <Button text="Đăng ký" fx:id="signUpButton" 
            style="-fx-background-color: #4FC3F7; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 24;" />

    <!-- Liên kết Đăng nhập -->
    <HBox spacing="5" alignment="CENTER">
        <Label text="Đã có tài khoản?" style="-fx-text-fill: #E3F2FD; -fx-font-size: 12px;" />
        <Label text="Đăng nhập" style="-fx-text-fill: #BBDEFB; -fx-font-size: 12px; -fx-underline: true; -fx-cursor: hand;" />
    </HBox>

    <!-- Footer -->
    <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #E1F5FE; -fx-background-radius: 8; -fx-border-color: #B3E5FC; -fx-border-radius: 8; -fx-padding: 8;">
        <Label text="miniZalo" style="-fx-font-size: 10px; -fx-text-fill: #1A237E;" />
    </VBox>
</VBox>
